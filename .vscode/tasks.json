{
    "version": "2.0.0",
    "label" : "Build Project using G++",
    
    
    "tasks": [
        {
            "label": "Build Project (Debug)",
            "type": "shell",
            "linux": {
                "type": "shell",
                "command": "/usr/bin/g++",
                "args": [
                    "-g",
                    "--std=c++11",
                    "src/*.cpp",
                    "-o",
                    "build/linux/program.exec",
                    // "-LlinuxLibs/libs",
                    "-Lc:linuxLibs/libs",
                    "-IlinuxLibs/include",
                    "-lGL",
                    "-lGLU",
                    "-lglfw3",
                    "-lX11",
                    "-lXxf86vm",
                    "-lXrandr",
                    "-lpthread",
                    "-lXi",
                    "-ldl",
                    "-lXinerama",
                    "-lXcursor",
                    "-lGLEW",
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "problemMatcher": [
                    "$gcc"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            },
            "windows": {
                "type": "shell",
                "command": "g++",
                "args": [
                    "-g",
                    "--std=c++11",
                    "src/*.cpp",
                    "-o",
                    "build/windows/program.exe",
                    "-LwinLibs/include",
                    "-lglew32",
                    "-lglfw3",
                    "-lopengl32",
                    "-lglu32",
                    "-lgdi32",
                    "-IwinLibs/include",
                    "-Lc:winLibs/libs",
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "problemMatcher": [
                    "$gcc"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Project (Release)",
            "type": "shell",
            "command": "cp",
            "args": [
                "-r",
                "resources",
                "build/windows"
            ],
            "problemMatcher": []
        }
    ],

    "group": {
        "kind": "build",
        "isDefault": true
    }
}